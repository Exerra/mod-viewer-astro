---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-theme-100 mx-10 xl:mx-80">
		<nav class="flex justify-between items-center mx-auto py-8 w-full">
			<p class="font-bold text-xl">Exerra's mods</p>
			<div>
				<a href="/" class="font-bold">Home</a>
				<a href="/" class="ml-5 font-semibold text-black/60">Nexus</a>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer class="my-10 text-center">
			<p>&copy; Exerra</p>
		</footer>
	</body>
</html>